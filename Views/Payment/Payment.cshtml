@using KursovaWorkDAL.Entity.Entities.Car;
@using KursovaWorkBLL.Services.AdditionalServices;

@{
    ViewBagHelper.SetIsLoggedInInViewBag(ViewContext);
    ViewBag.Title = "Оплата";
}
@model CarInfo;

<div class="d-flex flex-column justify-content-center text-center">
    <h1>Чи ви точно хочете купити @Model.Make @Model.Model @Model.Year року ціною в @Model.Price грн.?</h1>
    <div class="d-flex flex-row justify-content-center gap-2">
        <div class="d-flex justify-content-center">
            <a class="btn mt-2" asp-controller="Payment" asp-action="Success">Так</a>
        </div>
        <div class="d-flex justify-content-center">
            <a class="btn mt-2" asp-controller="Home" asp-action="ModelList">Ні</a>
        </div>
    </div>

</div>

@Html.Partial("_Footer")